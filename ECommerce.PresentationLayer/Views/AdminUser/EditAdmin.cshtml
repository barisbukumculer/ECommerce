@model UpdateUserDto

@{
    ViewData["Title"] = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-title">
    <h4>Profili Düzenle</h4>
</div>
<div class="card-body">
    <div class="form-validation">
        <form class="form-valide" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label">
                    Kullanıcı Adı <span class="text-danger">*</span>
                </label>
                <div class="input-group col-lg-6">
                    <span class="input-group-text">@@</span>
                    <input type="text" class="form-control" asp-for="UserName" readonly>
                    <input type="hidden" asp-for="Id" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label" >
                    İsim <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="Name" placeholder="İsim giriniz..">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-lg-4 col-form-label">
                    Soyisim <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="Surname" placeholder="Soyisim giriniz..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label" >
                    Şehir
                </label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="City" placeholder="Şehir giriniz..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label">
                    Telefon
                </label>
                <div class="col-lg-6">
                    <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="+90">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label" >
                    Fotoğraf
                </label>
                <div class="input-group col-lg-6">
                    <input type="file" class="form-control" name="ImageFile" >
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-8 ml-auto">
                    <button class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
