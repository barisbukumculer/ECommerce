@model UpdatePasswordDto
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-title">
    <h4>Şifre Değiştir</h4>
</div>
<div class="card-body">
    <div class="form-validation">
        <form class="form-valide" method="post">
            <div class="form-group row">
                <label class="col-lg-4 col-form-label" for="val-currency">
                    Eski Şifre <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                    <input type="password" class="form-control" asp-for="OldPassword" placeholder="Mevcut şifreyi giriniz..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label" for="val-currency">
                    Yeni Şifre <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Yeni şifre giriniz..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label" for="val-currency">
                    Yeni Şifre Tekrar <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Yeni şifreyi tekrar giriniz..">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-8 ml-auto">
                    <button class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>


