@using ECommerce.DtoLayer.Dtos.Employee;
@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "EmployeeList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card-title">
    <h4>Çalışan Listesi</h4>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Adı Soyadı</th>
                <th>Görev Tanımı</th>
                <th>Açıklama</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name @item.Surname</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><a href="/adminemployee/deleteemployee/@item.Id" class="btn btn-danger">Sil</a></td>
                    <td><a href="/adminpanel/updateemployee/@item.Id" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/adminpanel/addemployee/" class="btn btn-primary" style="float:right">Çalışan Ekle</a>
</div>