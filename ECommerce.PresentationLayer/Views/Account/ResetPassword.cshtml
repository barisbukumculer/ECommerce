<!DOCTYPE html>
<html lang="zxx">
<!-- Head -->

<head>
    <title>ModaMania Şifre Sıfırlama</title>
    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="">
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta-Tags -->
    <!-- Index-Page-CSS -->
    <link rel="stylesheet" href="~/login/css/style.css" type="text/css" media="all">
    <!-- //Custom-Stylesheet-Links -->
    <!--fonts -->
    <!-- //fonts -->
    <link rel="stylesheet" href="~/login/css/font-awesome.min.css" type="text/css" media="all">
    <!-- //Font-Awesome-File-Links -->
    <!-- Google fonts -->
    <link href="//fonts.googleapis.com/css?family=Quattrocento+Sans:400,400i,700,700i" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Mukta:200,300,400,500,600,700,800" rel="stylesheet">
    <!-- Google fonts -->

</head>
<!-- //Head -->
<!-- Body -->

<body>
    <section class="main">
        <div class="layer">

            <div class="content-w3ls">
                <div class="text-center icon">
                    <span class="fa fa-html5"></span>
                </div>
                <div class="content-bottom">
                    <form method="post">

                        <input type="hidden" asp-for="Token">
                        <input type="hidden" asp-for="UserName">

                        <div class="field-group">
                            <span class="fa fa-lock" aria-hidden="true"></span>
                            <div class="wthree-field">
                                <input  type="password" asp-for="Password" placeholder="Yeni Şifre" required>
                            </div>
                        </div>

                        <div class="field-group">
                            <span class="fa fa-lock" aria-hidden="true"></span>
                            <div class="wthree-field">
                                <input type="password" asp-for="ConfirmPassword" placeholder="Yeni Şifre Tekrar" required>
                            </div>
                        </div>
                        <div class="wthree-field">
                            <button class="btn">ŞİFREYİ SIFIRLA</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

</body>
<!-- //Body -->
</html>

