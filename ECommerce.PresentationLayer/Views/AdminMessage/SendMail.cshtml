@using ECommerce.DtoLayer.Dtos.Messages;
@model CreateMailDto

@{
    ViewData["Title"] = "SendMail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="email-left-box">
    <a href="/adminpanel/messages/sendmessage/KullanıcıAdı" class="btn btn-primary btn-block">Mesaj Oluştur</a>
    <div class="mail-list mt-4">
        <a href="/adminpanel/messages/inbox" class="list-group-item border-0  p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> Gelen Kutusu </a>
        <a href="/adminpanel/messages/sendbox" class="list-group-item border-0 p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i> Giden Kutusu </a>
    </div>
</div>
<div class="email-right-box">
    <div class="compose-content mt-5">
        <form method="post">
            <div class="form-group">
                <input type="email" asp-for="Email" class="form-control bg-transparent" placeholder=" Alıcı E-Posta Adresi">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="To" class="form-control bg-transparent" placeholder=" Kime (Ad Soyad)">
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="Subject" class="form-control bg-transparent" placeholder=" Konu">
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea class="textarea_editor form-control bg-light" asp-for="Body" rows="15" placeholder="Mesajınız ..."></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="text-left m-t-15">
                <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
            </div>
        </form>
    </div>
</div>